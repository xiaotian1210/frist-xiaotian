<!DOCTYPE html>
<html>

<head>
<meta charset="UTF-8">
<base href="${basePath?if_exists}">
<title>项目关联</title>
<script type="text/javascript" src="resources/ezfm/all.js"></script>
<script type="text/javascript" src="resources/ezfm/js/device/deviceUtil.js"></script>
<script type="text/javascript" src="resources/ezfm/js/device/cognate.js"></script>
<link rel="stylesheet" type="text/css" href="resources/ezfm/all.css"></link>
<script type="text/javascript">
	var notRoleButtons = "${notRoleButtons?if_exists}";
	$(function() {
		//初始化项目列表
		datagridInit('datagrid_project', 'ezfm/device/project/query', '项目关联', 'toolbar_datagrid_project', false, true);
	});
</script>
</head>

<body>
	<!--项目关联信息列表-->
	<table id="datagrid_project">
		<thead>
			<tr>
				<th data-options="field:'checkbox',checkbox:true"></th>
				<th data-options="field:'site_id',width:100,hidden:false,align:'center'">FM项目编号</th>
				<th data-options="field:'name',width:200,hidden:false,align:'center'">FM项目名称</th>
				<th data-options="field:'pk_project',width:200,hidden:false,align:'center'">YJWY项目编号</th>
				<th data-options="field:'project_name_',width:200,hidden:false,align:'center'">YJWY项目名称</th>
			</tr>
		</thead>
	</table>
	<!--工具栏-->
	<div id="toolbar_datagrid_project">
		<a id="add_site_project" class="easyui-linkbutton" onclick="beforOpenFormDialog('datagrid_project', null, '新增关联', 'dialog_project', 'form_project', 'toolbar_project');" data-options="iconCls:'icon-add',plain:'true'">新增</a> <a id="delete_site_project" class="easyui-linkbutton" onclick="deleteData('datagrid_project','ezfm/device/project/delete')" data-options="iconCls:'icon-remove',plain:'true'">删除</a>
	</div>
	<div id="dialog_project" class="szw_window" hidden="true">
		<form id="form_project" method="post">
			<input type="hidden" name="submit_method" type="text" />
			<table style="margin-left: 20px; margin-top: 10px;" border="0" cellspacing="0" cellpadding="0" width="300px" height="140px">
				<tr>
					<th width="80px">达美盛资产云区域</th>
					<td>
						<select validType="area" class="easyui-combobox" name="pk_area" id="combobox_area"   data-options="editable:false,width:200">
							<option value="default">区域选择</option>
						</select>
						<span style="color:red;">*</span>
					</td>
				</tr>
				<tr>
					<th width="80px">达美盛资产云项目</th>
					<td>
						<select validType="project" class="easyui-combobox" name="pk_project" id="combobox_project"  data-options="editable:false,width:200">
							<option value="default">项目选择</option>
						</select>
						<span style="color:red;">*</span>
					</td>
				</tr>
				<tr>
					<th>FM系统项目</th>
					<td>
						<select validType="site"  id="combobox_site" class="easyui-combobox" name="site_id"  data-options="editable:false,width:200">
							<option value="default">FM选择</option>
						</select>
						<span style="color:red;">*</span>
					</td>
				</tr>
			</table>
		</form>
	</div>
	<!--封装表单按钮-->
	<div id="toolbar_project" hidden="true">
		<a class="easyui-linkbutton" onclick="beforSubmitForm('datagrid_project','dialog_project','form_project','ezfm/device/project/')" data-options="iconCls:'icon-ok'">保&nbsp;存</a> <a class="easyui-linkbutton" onclick="closeDialog('form_project','dialog_project')" data-options="iconCls:'icon-cancel'">关&nbsp;闭</a>
	</div>
</body>

</html>