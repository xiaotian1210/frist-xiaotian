body,ul,h2,p,input,hr,h3{margin: 0;padding: 0;}
li{list-style: none;}
a{text-decoration: none;}
.clearfix:after{content: "";display: block;height:0;clear:both;}

body{font-family: "Microsoft YaHei";background: #e0f0e2;}
.top{width: 100%;height:60px;border-bottom:1px solid #aaaaaa;background: #fff;}
.top-con{width: 1200px;margin:0 auto;height:60px;position:relative;color:#000;}
.top .logo{float:left;margin-top: 10px;width: 145px;height:48px;}
.top .top-menu{width:260px;float:right;height:56px;line-height: 56px;font-size: 14px;}
.top .top-menu p{font-size: 12px;line-height: 30px;width: 100%;}
.top .top-menu p span{cursor: pointer;font-weight:bold; }
.top .top-menu .role{float: left;}
.top .top-menu .sign-out{float: right;margin:0 5px;}
.top .top-menu .help{float: right;margin:0 5px;}
.top .top-menu input{border-radius:5px;-moz-border-radius: 5px;-ms-border-radius:5px;-ms-border-radius:5px;background: none;border:1px solid rgba(180,180,180,0.6);width: 242px;height:22px;padding: 0 4px;float:left;}

.module-list{width: 100%;}
.module-list>ul{width:1200px;margin:0 auto;padding:10px 0;}
.module-list>ul>li{width:280px;margin:10px;float: left;display: inline;height:280px;background: #f0fff0;overflow-x: hidden;overflow-y: auto;}
.module-list li h2{height:28px;line-height:28px;font-size: 16px;color:#fff;background: #093;padding: 0 10px;font-weight:normal;}
.module-list li .task-list{padding:0 10px;line-height: 22px;font-size: 14px;}
.task-list a{color:#000;}
.task-list a:hover{color:#00f;}